<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.randy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/web_hi_res_512"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/web_hi_res_512"
        android:supportsRtl="true"
        android:theme="@style/Theme.Randy"
        android:textColor="@color/white">

        <activity android:name=".LeaderboardActivity"></activity>
        <activity android:name=".SelectStatsActivity" />
        <activity android:name=".StatsActivity" />
        <activity android:name=".RandomActivity"
            android:windowSoftInputMode="stateHidden|adjustNothing"/>
        <activity
            android:name=".StartActivity"
            android:label="StartPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>